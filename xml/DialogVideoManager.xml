<?xml version="1.0" encoding="UTF-8"?>
<window>
	<controls>
		<control type="group">
			<control type="label" id="2"><!-- Dialog heading string -->
				<left>0</left>
				<top>-200</top>
				<width>1644</width>
				<height>52</height>
			</control>
			<!-- Dialog background and title -->
			<include content="dialogbackground-common">
				<param name="dialogleft" value="100"/>
				<param name="dialogtop" value="80"/>
				<param name="dialogwidth" value="1720"/>
				<param name="dialogheight" value="745"/>
				<param name="headingwidth" value="1664"/>
				<param name="headinglabel" value="$INFO[Control.GetLabel(2)]$INFO[Container(50).NumItems,(,)]"/>
			</include>
			<include content="dialog-touchclose">
				<param name="closeleft" value="1790"/>
				<param name="closetop" value="62"/>
				<param name="onclickcondition1" value="true"/>
				<param name="onclickaction1" value="Dialog.Close(managevideoversions)"/>
				<param name="onclickcondition2" value="true"/>
				<param name="onclickaction2" value="Dialog.Close(managevideoextras)"/>
			</include>
			<control type="image">
				<left>158</left>
				<top>160</top>
				<width>285</width>
				<height>500</height>
				<texture background="true" diffuse="mask-rect.png">$INFO[ListItem.Art(poster)]</texture>
				<aspectratio align="center" aligny="top">keep</aspectratio>
			</control>
			<include content="media-mediaflags">
				<param name="mediaflagsleft" value="175"/>
				<param name="mediaflagstop" value="620"/>
				<param name="mediaflagssizepercent" value="90"/>
			</include>
			<control type="label"><!-- Path -->
				<left>144</left>
				<top>770</top>
				<width>1656</width>
				<height>30</height>
				<font>apptv16</font>
				<align>center</align>
				<aligny>bottom</aligny>
				<label>$INFO[Container(50).ListItem.FileNameAndPath]</label>
			</control>
			<control type="group" id="100">
				<top>110</top>
				<left>470</left>
				<control type="list" id="50"><!-- Version List -->
					<top>50</top>
					<left>20</left>
					<width>840</width>
					<height>600</height>
					<onup>50</onup>
					<ondown>50</ondown>
					<onleft>60</onleft>
					<onright>101</onright>
					<pagecontrol>60</pagecontrol>
					<scrolltime>200</scrolltime>
					<itemlayout height="100">
						<control type="label">
							<left>20</left>
							<top>4</top>
							<width>800</width>
							<height>40</height>
							<font>apptv20</font>
							<align>center</align>
							<aligny>center</aligny>
							<label>$VAR[VideoExtrasSelect]</label>
						</control>
						<control type="label">
							<left>20</left>
							<top>54</top>
							<width>800</width>
							<height>30</height>
							<font>apptv18</font>
							<align>center</align>
							<aligny>center</aligny>
							<label>$INFO[ListItem.Duration,$LOCALIZE[180]: ]</label>
						</control>
					</itemlayout>
					<focusedlayout height="100">
						<control type="image">
							<left>0</left>
							<top>0</top>
							<width>840</width>
							<height>100</height>
							<texture border="9">button-default-focus.png</texture>
						</control>
						<control type="label">
							<left>20</left>
							<top>4</top>
							<width>800</width>
							<height>40</height>
							<align>center</align>
							<aligny>center</aligny>
							<font>apptv20</font>
							<label>$VAR[VideoExtrasSelect]</label>
						</control>
						<control type="label">
							<left>20</left>
							<top>54</top>
							<width>800</width>
							<height>30</height>
							<font>apptv18</font>
							<align>center</align>
							<aligny>center</aligny>
							<label>$INFO[ListItem.Duration,$LOCALIZE[180]: ]</label>
						</control>
					</focusedlayout>
				</control>
			</control>
			<control type="scrollbar" id="60">
				<left>455</left>
				<top>155</top>
				<width>16</width>
				<height>610</height>
				<onright>50</onright>
				<animation condition="!Control.HasFocus(60) + !Container.Scrolling + $EXP[isnotAlwaysScrollbar]" effect="fade" start="100" end="0" time="200" reversible="true">Conditional</animation>
				<visible>$EXP[isEnabledScrollbar]</visible>
			</control>
			<control type="grouplist" id="101">
				<left>1390</left>
				<top>160</top>
				<width>384</width>
				<height>565</height>
				<onleft condition="Integer.IsGreater(Container(50).NumItems,0)">100</onleft>
				<itemgap>0</itemgap>
				<scrolltime tween="quadratic">200</scrolltime>
				<control type="button" id="21"><!-- Play -->
					<width>384</width>
					<height>84</height>
					<font>apptv23</font>
					<label>$LOCALIZE[208]</label>
					<align>center</align>
				</control>
				<control type="button" id="22"><!-- Add Version -->
					<width>384</width>
					<height>84</height>
					<font>apptv23</font>
					<label>$LOCALIZE[40014]</label>
					<align>center</align>
					<visible>Window.IsVisible(managevideoversions)</visible>
				</control>
				<control type="button" id="23"><!-- Add Extras -->
					<width>384</width>
					<height>84</height>
					<font>apptv23</font>
					<label>$LOCALIZE[40015]</label>
					<align>center</align>
					<visible>Window.IsVisible(managevideoextras)</visible>
				</control>
				<control type="button" id="27"><!-- Choose Art -->
					<width>384</width>
					<height>84</height>
					<font>apptv23</font>
					<label>$LOCALIZE[13511]</label>
					<align>center</align>
				</control>
				<control type="button" id="24"><!-- Rename Version -->
					<width>384</width>
					<height>84</height>
					<font>apptv23</font>
					<label>$LOCALIZE[40004]</label>
					<align>center</align>
					<visible>Window.IsVisible(managevideoversions)</visible>
				</control>
				<control type="button" id="28"><!-- Rename Extra -->
					<width>384</width>
					<height>84</height>
					<font>apptv23</font>
					<label>$LOCALIZE[118]</label>
					<align>center</align>
					<visible>Window.IsVisible(managevideoextras)</visible>
				</control>
				<control type="button" id="26"><!-- Remove -->
					<width>384</width>
					<height>84</height>
					<font>apptv23</font>
					<label>$LOCALIZE[15015]</label>
					<align>center</align>
				</control>
				<control type="button" id="25"><!-- Set Default -->
					<width>384</width>
					<height>84</height>
					<font>apptv23</font>
					<label>$LOCALIZE[40023]</label>
					<align>center</align>
					<visible>Window.IsVisible(managevideoversions)</visible>
				</control>
			</control>
		</control>
	</controls>
</window>
