<?xml version="1.0" encoding="UTF-8"?>
<window>
	<controls>
		<include>fadebackground</include>
		<control type="group">
			<control type="image">
				<left>100</left>
				<top>80</top>
				<width>1720</width>
				<height>665</height>
				<texture border="14">button-menu-background.png</texture>
			</control>
			<control type="label" id="2"><!-- Dialog heading string -->
				<left>0</left>
				<top>-200</top>
				<width>1644</width>
				<height>52</height>
			</control>
			<control type="grouplist"><!-- Dialog heading -->
				<left>138</left>
				<top>86</top>
				<width>1644</width>
				<height>50</height>
				<align>center</align>
				<orientation>horizontal</orientation>
				<control type="label">
					<width max="1500">auto</width>
					<height>50</height>
					<label>$INFO[Control.GetLabel(2)]</label>
					<wrapmultiline>true</wrapmultiline>
					<aligny>top</aligny>
				</control>
				<control type="label">
					<width max="144">auto</width>
					<height>50</height>
					<label>($INFO[Container(50).NumItems])</label>
					<aligny>top</aligny>
				</control>
			</control>
			<control type="image">
				<left>122</left>
				<top>138</top>
				<width>1680</width>
				<height>6</height>
				<texture>separator.png</texture>
			</control>
			<control type="image">
				<left>150</left>
				<top>210</top>
				<width>285</width>
				<height>500</height>
				<texture>$INFO[ListItem.Art(poster)]</texture>
				<aspectratio aligny="top">keep</aspectratio>
			</control>
			<control type="label"><!-- Path -->
				<left>144</left>
				<top>700</top>
				<width>1656</width>
				<height>30</height>
				<font>apptv16</font>
				<align>center</align>
				<aligny>bottom</aligny>
				<label>$INFO[Container(50).ListItem.FileNameAndPath]</label>
			</control>
			<control type="group" id="100">
				<top>110</top>
				<left>470</left>
				<control type="list" id="50"><!-- Version List -->
					<top>50</top>
					<left>20</left>
					<width>840</width>
					<height>625</height>
					<onup>50</onup>
					<ondown>50</ondown>
					<onleft>60</onleft>
					<onright>101</onright>
					<pagecontrol>60</pagecontrol>
					<scrolltime>200</scrolltime>
					<itemlayout height="115">
						<control type="label">
							<left>20</left>
							<top>0</top>
							<width>800</width>
							<height>60</height>
							<font>apptv20</font>
							<align>center</align>
							<aligny>center</aligny>
							<label>$INFO[ListItem.VideoVersionName]</label>
						</control>
						<control type="label">
							<left>20</left>
							<top>50</top>
							<width>800</width>
							<height>65</height>
							<font>apptv16</font>
							<align>center</align>
							<aligny>center</aligny>
							<label>$INFO[ListItem.Duration,$LOCALIZE[180]: ][CR]$INFO[ListItem.VideoCodec,, ]$INFO[ListItem.VideoResolution,| , ]$INFO[ListItem.VideoAspect,| ,:1 ]$INFO[ListItem.AudioCodec,| , ]</label>
						</control>
					</itemlayout>
					<focusedlayout height="115">
						<control type="image">
							<left>0</left>
							<top>0</top>
							<width>840</width>
							<height>120</height>
							<texture border="9">button-default-focus.png</texture>
						</control>
						<control type="label">
							<left>20</left>
							<top>0</top>
							<width>800</width>
							<height>60</height>
							<align>center</align>
							<aligny>center</aligny>
							<font>apptv20</font>
							<label>$INFO[ListItem.VideoVersionName]</label>
						</control>
						<control type="label">
							<left>20</left>
							<top>50</top>
							<width>800</width>
							<height>65</height>
							<font>apptv16</font>
							<align>center</align>
							<aligny>center</aligny>
							<label>$INFO[ListItem.Duration,$LOCALIZE[180]: ][CR]$INFO[ListItem.VideoCodec,, ]$INFO[ListItem.VideoResolution,| , ]$INFO[ListItem.VideoAspect,| ,:1 ]$INFO[ListItem.AudioCodec,| , ]</label>
						</control>
					</focusedlayout>
				</control>
			</control>
			<control type="scrollbar" id="60">
				<left>440</left>
				<top>150</top>
				<width>16</width>
				<height>625</height>
				<onright>50</onright>
				<animation condition="!Control.HasFocus(60) + !Container.Scrolling + $EXP[isnotAlwaysScrollbar]" effect="fade" start="100" end="0" time="200" reversible="true">Conditional</animation>
				<visible>$EXP[isEnabledScrollbar]</visible>
			</control>
			<control type="grouplist" id="101">
				<left>1390</left>
				<top>160</top>
				<width>384</width>
				<height>565</height>
				<onleft condition="Integer.IsGreater(Container(50).NumItems,0)">100</onleft>
				<itemgap>0</itemgap>
				<scrolltime tween="quadratic">200</scrolltime>
				<control type="button" id="21"><!-- Play -->
					<width>384</width>
					<height>84</height>
					<font>apptv23</font>
					<label>$LOCALIZE[208]</label>
					<align>center</align>
				</control>
				<control type="button" id="22"><!-- Add Version -->
					<width>384</width>
					<height>84</height>
					<font>apptv23</font>
					<label>$LOCALIZE[40014]</label>
					<align>center</align>
					<visible>Window.IsVisible(managevideoversions)</visible>
				</control>
				<control type="button" id="23"><!-- Add Extras -->
					<width>384</width>
					<height>84</height>
					<font>apptv23</font>
					<label>$LOCALIZE[40015]</label>
					<align>center</align>
					<visible>Window.IsVisible(managevideoextras)</visible>
				</control>
				<control type="button" id="27"><!-- Choose Art -->
					<width>384</width>
					<height>84</height>
					<font>apptv23</font>
					<label>$LOCALIZE[13511]</label>
					<align>center</align>
				</control>
				<control type="button" id="24"><!-- Rename Version -->
					<width>384</width>
					<height>84</height>
					<font>apptv23</font>
					<label>$LOCALIZE[40004]</label>
					<align>center</align>
					<visible>Window.IsVisible(managevideoversions)</visible>
				</control>
				<control type="button" id="28"><!-- Rename Extra -->
					<width>384</width>
					<height>84</height>
					<font>apptv23</font>
					<label>$LOCALIZE[118]</label>
					<align>center</align>
					<visible>Window.IsVisible(managevideoextras)</visible>
				</control>
				<control type="button" id="26"><!-- Remove -->
					<width>384</width>
					<height>84</height>
					<font>apptv23</font>
					<label>$LOCALIZE[15015]</label>
					<align>center</align>
				</control>
				<control type="button" id="25"><!-- Set Default -->
					<width>384</width>
					<height>84</height>
					<font>apptv23</font>
					<label>$LOCALIZE[40023]</label>
					<align>center</align>
					<visible>Window.IsVisible(managevideoversions)</visible>
				</control>
			</control>
		</control>
	</controls>
</window>
