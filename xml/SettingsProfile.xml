<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">2</defaultcontrol>
	<menucontrol>9000</menucontrol>
	<onload>ClearProperty(ShowScreenSettings,home)</onload>
	<onunload>ClearProperty(ShowScreenSettings,home)</onunload>
	<controls>
		<control type="group">
			<!-- Dim screen for fake Screen settings dialog -->
			<animation effect="fadediffuse" start="FFFFFFFF" end="FF404040" time="100" condition="$EXP[isEnabledScreenSettings]">Conditional</animation>
			<include>backgroundsimple</include>
			<control type="group">
				<visible>!$EXP[isActiveFullscreenWindow]</visible>
				<include>overlayed-windowfade</include>
				<include>fake-overlay</include>
				<control type="label"><!-- Screen heading -->
					<left>1400</left>
					<top>30</top>
					<width>464</width>
					<height>45</height>
					<label>$LOCALIZE[31555]</label>
					<font>apptv30</font>
				</control>
				<control type="list" id="2">
					<left>1074</left>
					<top>168</top>
					<width>796</width>
					<height>675</height>
					<onleft condition="Skin.HasSetting(lock-screensettings)">noop</onleft>
					<onleft condition="!Skin.HasSetting(lock-screensettings)">9000</onleft>
					<onright condition="![$EXP[isEnabledScrollbar]]">noop</onright>
					<onright condition="$EXP[isEnabledScrollbar]">23</onright>
					<onup>2</onup>
					<ondown>2</ondown>
					<pagecontrol>23</pagecontrol>
					<itemlayout height="84">
						<control type="image">
							<left>0</left>
							<top>0</top>
							<width>756</width>
							<height>84</height>
							<texture border="9">button-default.png</texture>
						</control>
						<control type="label">
							<left>32</left>
							<top>0</top>
							<width>756</width>
							<height>84</height>
							<font>apptv23</font>
							<selectedcolor>listselected-text</selectedcolor>
							<label>$INFO[ListItem.Label]</label>
						</control>
					</itemlayout>
					<focusedlayout height="84">
						<control type="image">
							<left>0</left>
							<top>0</top>
							<width>756</width>
							<height>84</height>
							<texture border="9">button-default-focus.png</texture>
							<animation condition="ControlGroup(9000).HasFocus()" effect="fade" start="100" end="60">Conditional</animation>
						</control>
						<control type="label">
							<left>32</left>
							<top>0</top>
							<width>670</width>
							<height>84</height>
							<font>apptv23</font>
							<selectedcolor>listselected-text</selectedcolor>
							<label>$INFO[ListItem.Label]</label>
						</control>
					</focusedlayout>
				</control>
				<control type="scrollbar" id="23">
					<left>1870</left>
					<top>168</top>
					<width>18</width>
					<height>675</height>
					<onleft>2</onleft>
					<animation condition="!Control.HasFocus(23) + !Container.Scrolling + $EXP[isnotAlwaysScrollbar]" effect="fade" start="100" end="0" time="200" reversible="true">Conditional</animation>
					<visible>$EXP[isEnabledScrollbar]</visible>
				</control>
				<control type="image">
					<left>297</left>
					<top>168</top>
					<width>480</width>
					<height>480</height>
					<texture fallback="DefaultUser.png" diffuse="mask-rect.png">$INFO[Container(2).ListItem.Icon]</texture>
					<aspectratio>keep</aspectratio>
				</control>
				<control type="fadelabel" id="3"><!-- Last loaded profile -->
					<left>15</left>
					<top>675</top>
					<width>1044</width>
					<height>60</height>
					<label>$LOCALIZE[13204] $INFO[System.ProfileName]</label>
					<font>apptv23</font>
					<align>center</align>
				</control>
				<control type="label"><!-- Profile to auto login -->
					<left>15</left>
					<top>750</top>
					<width>1044</width>
					<height>60</height>
					<font>apptv23</font>
					<align>center</align>
					<label>$LOCALIZE[31897]: $INFO[System.ProfileAutoLogin]</label>
					<visible>!System.HasLoginScreen + !String.IsEmpty(System.ProfileAutoLogin)</visible>
				</control>
				<!-- Show a iOS style page indicator to show which focus group has the current focus -->
				<!-- Focus group can be hidden or shown but is potentially focusable, that is it has not be disabled -->
				<control type="group">
					<include content="page-indicator">
						<param name="indicatorleft" value="864" />
						<param name="indicatortop" value="0" />
						<param name="indicatorwidth" value="192" />
						<param name="indicatorheight" value="48" />
						<param name="indicatororientation" value="horizontal" />
						<param name="grp1indicate" value="[ControlGroup(9000).HasFocus()|String.IsEqual(Window(home).Property(ShowScreenSettings),show)]" />
						<param name="grp1visible" value="[!Skin.HasSetting(lock-screensettings)]" />
						<param name="grp2indicate" value="[Control.HasFocus(2)]" />
						<param name="grp2visible" value="[Control.IsVisible(2)]+[!Skin.HasSetting(lock-screensettings)|$EXP[isEnabledScrollbar]]" />
						<param name="grp3indicate" value="[Control.HasFocus(23)]" />
						<param name="grp3visible" value="[$EXP[isEnabledScrollbar]]" />
					</include>
				</control>
				<include>touch-controls</include>
			</control>
		</control>
		<control type="group"><!-- Screen Settings Menu -->
			<left>0</left>
			<top>1080</top>
			<include>screen-settings</include>
			<!-- Dialog background and title -->
			<include content="dialogbackground-common">
				<param name="dialogleft" value="622"/>
				<param name="dialogtop" value="114"/>
				<param name="dialogwidth" value="672"/>
				<param name="dialogheight" value="820"/>
				<param name="headingwidth" value="639"/>
				<param name="headinglabel" value="$LOCALIZE[31557]$INFO[Container(9000).NumItems, (,)]"/>
			</include>
			<include content="dialog-touchclose">
				<param name="closeleft" value="1262"/>
				<param name="closetop" value="98"/>
				<param name="onclickcondition1" value="!String.IsEqual(Window(home).Property(ShowScreenSettings),show)"/>
				<param name="onclickaction1" value="SetProperty(ShowScreenSettings,show,home)"/>
				<param name="onclickcondition2" value="String.IsEqual(Window(home).Property(ShowScreenSettings),show)"/>
				<param name="onclickaction2" value="ClearProperty(ShowScreenSettings,home)"/>
			</include>
			<include content="page-offscreen-vertical">
				<param name="indicator1left" value="942"/>
				<param name="indicator1top" value="180"/>
				<param name="indicator2left" value="942"/>
				<param name="indicator2top" value="898"/>
				<param name="indicatorsize" value="32"/>
				<param name="indicatorcontainer" value="9000"/>
			</include>
			<control type="grouplist" id="9000">
				<defaultcontrol>4</defaultcontrol>
				<left>638</left>
				<top>206</top>
				<width>640</width>
				<height>700</height>
				<itemgap>0</itemgap>
				<onleft>ClearProperty(ShowScreenSettings,home)</onleft>
				<onleft>2</onleft>
				<onright>ClearProperty(ShowScreenSettings,home)</onright>
				<onright>2</onright>
				<onback>ClearProperty(ShowScreenSettings,home)</onback>
				<onback>2</onback>
				<control type="radiobutton" id="4"><!-- Enable login screen -->
					<include>settings-screen-common</include>
					<label>$LOCALIZE[20096]</label>
					<radioposx>495</radioposx>
				</control>
				<control type="button" id="5"><!-- Choose auto login user -->
					<include>settings-screen-common</include>
					<label>$LOCALIZE[31897]</label>
					<label2>$INFO[System.ProfileAutoLogin]</label2>
					<enable>!System.HasLoginScreen</enable>
				</control>
				<control type="radiobutton" id="1195"><!-- Show profile name on home screen -->
					<include>settings-screen-common</include>
					<label>$LOCALIZE[31899]</label>
					<onclick>Skin.ToggleSetting(home-profilename)</onclick>
					<radioposx>495</radioposx>
					<selected>Skin.HasSetting(home-profilename)</selected>
				</control>
			</control>
		</control>

	</controls>
</window>