<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol>101</defaultcontrol>
	<animation effect="fade" end="0" condition="!String.IsEqual(Skin.String(osd-lyricpath),script.cu.lrclyrics)">Conditional</animation>
	<controls>
		<include>background</include>
		<control type="group">
			<control type="label">
				<!-- Scraper -->
				<left>15</left>
				<top>75</top>
				<width>825</width>
				<height>45</height>
				<label>$LOCALIZE[21870] - $INFO[Control.GetLabel(200)]</label>
				<font>apptv23</font>
			</control>
			<control type="label" id="200">
				<visible>false</visible>
			</control>
			<control type="label">
				<!--Dialog heading -->
				<left>1419</left>
				<top>75</top>
				<width>540</width>
				<height>56</height>
				<font>apptv30</font>
				<label>$ADDON[script.cu.lrclyrics 32199]</label>
			</control>
			<control type="image">
				<!-- media info background image -->
				<left>0</left>
				<top>855</top>
				<width>1920</width>
				<height>232</height>
				<texture>background.png</texture>
				<colordiffuse>mask-background</colordiffuse>
			</control>
			<control type="image">
				<!-- Cd overlay -->
				<animation effect="slide" start="-153" end="0" time="900" tween="cubic" easing="out" delay="1000">WindowOpen</animation>
				<animation type="WindowClose">
					<effect type="slide" start="0" end="-147" time="100" tween="cubic" easing="in" delay="0" />
					<effect type="fade" start="100" end="0" time="200" />
					<condition type="!Player.Playing" />
				</animation>
				<animation effect="rotate" end="-360" center="auto" time="3000" loop="true" reversible="false" condition="!Player.Paused">Conditional</animation>
				<width>322</width>
				<height>322</height>
				<left>198</left>
				<top>720</top>
				<texture fallback="DefaultDVDRom.png">$INFO[Player.FolderPath]/cdart.png</texture>
				<aspectratio aligny="bottom">keep</aspectratio>
				<visible>!String.StartsWith(Player.Art(thumb),Default)</visible>
			</control>
			<control type="image">
				<left>15</left>
				<top>682</top>
				<height>398</height>
				<width>398</width>
				<texture>case-cd.png</texture>
				<aspectratio>stretch</aspectratio>
				<visible>Skin.HasSetting(media-case) + !String.StartsWith(Player.Art(thumb),Default)</visible>
			</control>
			<control type="image">
				<!-- Cover image -->
				<left>54</left>
				<top>712</top>
				<width>338</width>
				<height>338</height>
				<texture>$VAR[PlayerMusicCover]</texture>
				<aspectratio aligny="bottom">stretch</aspectratio>
			</control>
			<control type="label">
				<!-- Song title -->
				<left>555</left>
				<top>858</top>
				<width>984</width>
				<height>68</height>
				<font>apptv30</font>
				<label>$INFO[MusicPlayer.Title]</label>
				<include condition="Skin.HasSetting(text-autoscroll)">scrolltext</include>
			</control>
			<control type="label">
				<!-- Artist -->
				<left>555</left>
				<top>912</top>
				<width>1023</width>
				<height>56</height>
				<font>apptv23</font>
				<label>$INFO[MusicPlayer.Artist]</label>
				<include condition="Skin.HasSetting(text-autoscroll)">scrolltext</include>
			</control>
			<control type="label">
				<!-- Album name -->
				<left>555</left>
				<top>957</top>
				<width>984</width>
				<height>56</height>
				<font>apptv23</font>
				<label>$INFO[MusicPlayer.Album]</label>
				<include condition="Skin.HasSetting(text-autoscroll)">scrolltext</include>
			</control>
			<control type="label">
				<!-- Player time -->
				<left>555</left>
				<top>1002</top>
				<width>984</width>
				<height>56</height>
				<label>$INFO[MusicPlayer.Time]$INFO[MusicPlayer.Duration, / ]</label>
				<font>apptv23</font>
			</control>
			<control type="progress" id="1">
				<left>837</left>
				<top>1024</top>
				<width>1028</width>
				<height>18</height>
				<info>Player.Progress</info>
				<visible>true</visible>
			</control>
			<control type="slider" id="402">
				<!-- Seek slider -->
				<left>837</left>
				<top>1024</top>
				<width>1028</width>
				<height>18</height>
				<action>seek</action>
			</control>
			<!-- ** Required ** Do not change <id> or <type> (Smooth scrolling list for lyrics) -->
			<control type="list" id="110">
				<left>30</left>
				<top>150</top>
				<width>1860</width>
				<height>555</height>
				<onleft>111</onleft>
				<onright>111</onright>
				<onup>110</onup>
				<ondown>110</ondown>
				<pagecontrol>111</pagecontrol>
				<itemlayout height="60">
					<control type="label">
						<left>30</left>
						<top>0</top>
						<width>1860</width>
						<height>60</height>
						<align>center</align>
						<label>$INFO[ListItem.Label]</label>
					</control>
				</itemlayout>
				<focusedlayout height="75">
					<control type="label">
						<left>30</left>
						<top>0</top>
						<width>1860</width>
						<height>75</height>
						<font>apptv38</font>
						<textcolor>lightblue</textcolor>
						<align>center</align>
						<label>$INFO[ListItem.Label]</label>
						<visible>!Control.HasFocus(110)</visible>
					</control>
					<control type="label">
						<left>30</left>
						<top>0</top>
						<width>1860</width>
						<height>75</height>
						<font>apptv38</font>
						<textcolor>lightblue</textcolor>
						<align>center</align>
						<label fallback="--">$INFO[ListItem.Label]</label>
						<visible>Control.HasFocus(110)</visible>
					</control>
				</focusedlayout>
			</control>
			<control type="spincontrol" id="111">
				<!-- Next page button -->
				<left>1792</left>
				<top>870</top>
				<subtype>page</subtype>
				<font>apptv23</font>
				<onleft>110</onleft>
				<onright>110</onright>
				<ondown>110</ondown>
				<onup>110</onup>
				<showonepage>true</showonepage>
				<visible>Control.IsVisible(110)</visible>
			</control>
			<control type="label" id="2">
				<!-- Pick -->
				<left>30</left>
				<top>195</top>
				<width>1860</width>
				<height>45</height>
				<align>center</align>
				<selectedcolor>listselected-text</selectedcolor>
				<label>$LOCALIZE[179]?</label>
				<visible>Control.IsVisible(120) + ![Control.IsVisible(100) | Control.IsVisible(110)]</visible>
			</control>
			<!-- ** Required ** Do not change <id> or <type> (Song Chooser if it gets it wrong) -->
			<control type="list" id="120">
				<left>30</left>
				<top>210</top>
				<width>1860</width>
				<height>615</height>
				<onleft>121</onleft>
				<onright>121</onright>
				<onup>120</onup>
				<ondown>120</ondown>
				<pagecontrol>121</pagecontrol>
				<animation effect="slide" start="0,0" end="30,0" condition="!Control.IsVisible(121)">Conditional</animation>
				<itemlayout height="60">
					<control type="label">
						<left>15</left>
						<top>0</top>
						<width>1860</width>
						<height>60</height>
						<selectedcolor>listselected-text</selectedcolor>
						<align>center</align>
						<label>$INFO[ListItem.Label]</label>
					</control>
				</itemlayout>
				<focusedlayout height="60">
					<control type="label">
						<left>15</left>
						<top>0</top>
						<width>1860</width>
						<height>60</height>
						<textcolor>listselected-text</textcolor>
						<align>center</align>
						<label>$INFO[ListItem.Label]</label>
					</control>
				</focusedlayout>
			</control>
			<control type="spincontrol" id="121">
				<!-- Next page button -->
				<left>1792</left>
				<top>870</top>
				<subtype>page</subtype>
				<font>apptv23</font>
				<onleft>120</onleft>
				<onright>120</onright>
				<ondown>120</ondown>
				<onup>120</onup>
				<showonepage>true</showonepage>
				<visible>Control.IsVisible(120)</visible>
			</control>
		</control>
	</controls>
</window>
