			<animation effect="fadediffuse" start="FFFFFFFF" end="FF404040" time="100" condition="String.IsEmpty(ListItem.Label) + String.IsEmpty(ListItem(1).Label) + System.IdleTime(1) + !Window.IsVisible(busydialog)">Conditional</animation>
