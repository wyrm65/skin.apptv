<?xml version="1.0" encoding="utf-8"?>
<window>
	<animation effect="fade" time="250" delay="1750">WindowOpen</animation>
	<animation effect="fade" time="100">WindowClose</animation>
	<coordinates>
		<left>0</left>
		<top>0</top>
	</coordinates>
	<controls>
		<visible>String.IsEmpty(Window(home).Property(script.cinemavision.running))</visible>
		<include>fadebackground</include>
		<control type="image">
			<!-- Busy animation -->
			<left>864</left>
			<top>435</top>
			<width>192</width>
			<height>192</height>
			<texture>busy.png</texture>
			<aspectratio>keep</aspectratio>
			<include>busy-spin</include>
		</control>
		<control type="progress" id="10">
			<left>768</left>
			<top>650</top>
			<width>384</width>
			<height>18</height>
		</control>
	</controls>
</window>
