			<visible>![$EXP[isContentEpisodes]]</visible>
			<viewtype label="31942">wrap</viewtype>
			<left>236</left>
			<top>240</top>
			<width>1656</width>
			<height>700</height>
			<onleft>54</onleft>
			<onright>54</onright>
			<onup condition="Skin.HasSetting(lock-screensettings)">4541</onup>
			<onup condition="!Skin.HasSetting(lock-screensettings)">9000</onup>
