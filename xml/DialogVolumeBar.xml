<?xml version="1.0" encoding="UTF-8"?>
<window>
	<coordinates>
		<left>0</left>
		<top>0</top>
	</coordinates>
	<controls>
		<visible>!Window.IsVisible(notification)</visible>
		<control type="image">
			<!-- Dialog background -->
			<left>1353</left>
			<top>18</top>
			<width>531</width>
			<height>186</height>
			<texture border="14">button-menu-background.png</texture>
		</control>
		<control type="label" id="0">
			<!-- Volume -->
			<left>1527</left>
			<top>33</top>
			<width>336</width>
			<height>60</height>
			<font>apptv38</font>
			<align>center</align>
			<label>$INFO[Player.Volume]</label>
			<visible>!Player.Muted</visible>
		</control>
		<control type="label">
			<!-- Muted label -->
			<left>1527</left>
			<top>33</top>
			<width>336</width>
			<height>60</height>
			<font>apptv38</font>
			<align>center</align>
			<label>[B]$LOCALIZE[31651][/B]</label>
			<visible>Player.Muted</visible>
		</control>
		<control type="image">
			<!-- Non muted image -->
			<left>1377</left>
			<top>33</top>
			<width>144</width>
			<height>144</height>
			<texture>volume-thingy.png</texture>
			<visible>!Player.Muted</visible>
		</control>
		<control type="image">
			<!-- Muted image -->
			<left>1380</left>
			<top>30</top>
			<width>144</width>
			<height>144</height>
			<aspectratio>keep</aspectratio>
			<texture>volume-thingy-mute.png</texture>
			<visible>Player.Muted</visible>
		</control>
		<control type="progress">
			<left>1527</left>
			<top>108</top>
			<width>336</width>
			<height>24</height>
			<info>Player.Volume</info>
			<texturebg>blank.png</texturebg>
			<midtexture>colours/blue.png</midtexture>
			<animation effect="fade" end="50" condition="Player.Passthrough">Conditional</animation>
			<visible>Integer.IsGreater(Player.Volume,0)</visible>
		</control>
		<control type="image">
			<!-- Volume bar overlay -->
			<left>1527</left>
			<top>108</top>
			<width>336</width>
			<height>24</height>
			<texture>volume-overlay.png</texture>
		</control>
		<control type="label">
			<!-- Passthrough -->
			<left>1377</left>
			<top>150</top>
			<width>483</width>
			<height>36</height>
			<label>$LOCALIZE[29802]</label>
			<font>apptv23</font>
			<align>center</align>
			<visible>Player.Passthrough</visible>
		</control>
	</controls>
</window>
