		<control type="label">
			<!-- Dialog heading (Play) -->
			<left>591</left>
			<top>66</top>
			<width>744</width>
			<height>51</height>
			<font>apptv25</font>
			<label>$LOCALIZE[208]$INFO[Container(996).NumItems, (,)]</label>
