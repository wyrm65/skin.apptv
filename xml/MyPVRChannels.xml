<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol>50</defaultcontrol>
	<menucontrol>9000</menucontrol>
	<views>50</views>
	<onload condition="!Skin.HasSetting(SkinHelper.EnablePVRThumbs)">Skin.SetBool(SkinHelper.EnablePVRThumbs)</onload>
	<onload>ClearProperty(ShowScreenSettings,home)</onload>
	<onunload>ClearProperty(ShowScreenSettings,home)</onunload>
	<controls>
		<include>background</include>
		<include>fake-overlay</include>
		<control type="grouplist">
			<left>1170</left>
			<top>30</top>
			<width>auto</width>
			<height>93</height>
			<align>left</align>
			<aligny>center</aligny>
			<orientation>horizontal</orientation>
			<control type="label">
				<!-- Video screen heading -->
				<width max="600">auto</width>
				<height>93</height>
				<label>$VAR[PVRHeading]</label>
				<font>apptv30</font>
				<wrapmultiline>true</wrapmultiline>
				<aligny>top</aligny>
			</control>
			<control type="label">
				<!-- Number of files -->
				<width max="120">auto</width>
				<height>93</height>
				<label>$INFO[Container.NumItems,(,)]</label>
				<aligny>top</aligny>
			</control>
		</control>
		<include file="View-PVR.xml">PVRListView</include>
		<control type="group">
			<!-- Screen Settings Menu -->
			<left>0</left>
			<top>1080</top>
			<include>screen-settings</include>
			<include>fadebackground</include>
			<control type="image">
				<!-- Button background -->
				<left>660</left>
				<top>150</top>
				<width>594</width>
				<height>777</height>
				<texture border="14">button-menu-background.png</texture>
			</control>
			<control type="label">
				<!-- Dialog heading -->
				<left>675</left>
				<top>162</top>
				<width>558</width>
				<height>51</height>
				<font>apptv23</font>
				<label>$LOCALIZE[31557]</label>
				<align>center</align>
			</control>
			<control type="button">
				<!-- Touch Close button -->
				<left>1221</left>
				<top>135</top>
				<width>48</width>
				<height>48</height>
				<texturefocus>touch-close.png</texturefocus>
				<texturenofocus>touch-close.png</texturenofocus>
				<onclick condition="!String.IsEqual(Window(home).Property(ShowScreenSettings),show)">SetProperty(ShowScreenSettings,show,home)</onclick>
				<onclick condition="String.IsEqual(Window(home).Property(ShowScreenSettings),show)">ClearProperty(ShowScreenSettings,home)</onclick>
				<visible>$EXP[isEnabledTouch]</visible>
			</control>
			<control type="image">
				<left>675</left>
				<top>213</top>
				<width>564</width>
				<height>6</height>
				<texture>separator.png</texture>
			</control>
			<control type="grouplist" id="9000">
				<left>675</left>
				<top>225</top>
				<width>564</width>
				<height>717</height>
				<onright>50</onright>
				<onleft>50</onleft>
				<control type="button" id="3">
					<!-- Sort by button -->
					<width>564</width>
					<height>69</height>
					<font>apptv22</font>
					<label>$LOCALIZE[103]</label>
				</control>
				<control type="togglebutton" id="4">
					<!-- Sort direction button -->
					<width>564</width>
					<height>69</height>
					<label>$LOCALIZE[21429]: $LOCALIZE[21430]</label>
					<altlabel>$LOCALIZE[21429]: $LOCALIZE[21431]</altlabel>
					<font>apptv22</font>
				</control>
				<control type="button" id="28">
					<label></label>
					<!--Change Channel Groups-->
					<width>564</width>
					<height>69</height>
					<font>apptv22</font>
				</control>
				<control type="radiobutton" id="31">
					<!-- Filter -->
					<width>564</width>
					<height>69</height>
					<label>$LOCALIZE[587]</label>
					<font>apptv22</font>
					<selected>Container.Filtered</selected>
					<onclick>right</onclick>
					<visible>Window.IsActive(tvchannels) | Window.IsActive(radiochannels)</visible>
				</control>
				<control type="radiobutton" id="5">
					<!-- Group recordings by folder structure -->
					<width>564</width>
					<height>69</height>
					<label>$LOCALIZE[19270]</label>
					<font>apptv22</font>
					<visible>Window.IsActive(tvrecordings) | Window.IsActive(radiorecordings)</visible>
				</control>
				<control type="radiobutton" id="6">
					<!-- Show hidden channels -->
					<width>564</width>
					<height>69</height>
					<label>$LOCALIZE[19051]</label>
					<font>apptv22</font>
					<visible>Window.IsActive(tvchannels) | Window.IsActive(radiochannels)</visible>
				</control>
				<control type="button" id="902">
					<!-- Guide -->
					<width>564</width>
					<height>69</height>
					<label>$LOCALIZE[22020]</label>
					<font>apptv22</font>
					<onclick condition="String.IsEmpty(Window.Property(IsRadio))">ActivateWindow(tvguide)</onclick>
					<onclick condition="!String.IsEmpty(Window.Property(IsRadio))">ActivateWindow(radioguide)</onclick>
				</control>
				<control type="button" id="903">
					<!-- Recordings -->
					<width>564</width>
					<height>69</height>
					<label>$LOCALIZE[19163]</label>
					<font>apptv22</font>
					<onclick condition="String.IsEmpty(Window.Property(IsRadio))">ActivateWindow(tvrecordings)</onclick>
					<onclick condition="!String.IsEmpty(Window.Property(IsRadio))">ActivateWindow(radiorecordings)</onclick>
				</control>
				<control type="button" id="904">
					<!-- Search -->
					<width>564</width>
					<height>69</height>
					<label>$LOCALIZE[137]</label>
					<font>apptv22</font>
					<onclick condition="String.IsEmpty(Window.Property(IsRadio))">ActivateWindow(tvsearch)</onclick>
					<onclick condition="!String.IsEmpty(Window.Property(IsRadio))">ActivateWindow(radiosearch)</onclick>
				</control>
				<control type="button" id="905">
					<!-- Timers -->
					<width>564</width>
					<height>69</height>
					<label>$LOCALIZE[19040]</label>
					<font>apptv22</font>
					<onclick condition="String.IsEmpty(Window.Property(IsRadio))">ActivateWindow(tvtimers)</onclick>
					<onclick condition="!String.IsEmpty(Window.Property(IsRadio))">ActivateWindow(radiotimers)</onclick>
				</control>
			</control>
		</control>
		<include>element-focusvert</include>
		<include>touch-controls</include>
	</controls>
</window>
